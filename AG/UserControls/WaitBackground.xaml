<UserControl x:Class="AG.UserControls.WaitBackground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AG.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#A5000000" Visibility="{Binding IsWaitMessageVisible, Converter={StaticResource visibilityConverter}}">
        <Border CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White">
            <StackPanel Margin="20">
                <TextBlock TextWrapping="Wrap" Text="{Binding WaitMessageTitle}" FontSize="26" FontWeight="Bold"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding WaitMessageText}" FontSize="24"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
