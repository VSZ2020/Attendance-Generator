<Window x:Class="AG.Windows.WndEmployeeTimeIntervals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AG.Windows"
        mc:Ignorable="d"
        Title="WndEmployeeTimeIntervals" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding EmployeeName}"/>
        <DataGrid Grid.Row="1" Grid.Column="0">
        </DataGrid>
        <DockPanel Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Отмена" IsCancel="True" DockPanel.Dock="Right"/>
            <Button Content="Подтвердить" IsDefault="True" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</Window>
