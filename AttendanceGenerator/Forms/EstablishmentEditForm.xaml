<Window x:Class="AttendanceGenerator.Forms.EstablishmentEditForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceGenerator.Forms"
        mc:Ignorable="d"
        Title="Редактор учреждения" Height="auto" Width="599" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Grid Margin="10">
        <StackPanel>
            <TextBox Text="Название"/>
            <TextBox Text="ОГРН"/>
            <TextBox Text="ИНН"/>
            <TextBlock Text="Отделы"/>
            <ListView MinHeight="200"/>
            <Button Content="Добавить отдел"/>
            <Button Content="Редактировать отдел"/>
            <Button Content="Удалить отдел"/>
            <Separator Height="20"/>
            <Button Content="Подтвердить изменения" IsDefault="True" Style="{StaticResource RoundedBigButton}"/>
            <Button Content="Отмена" IsCancel="True" Style="{StaticResource RoundedBigButton}"/>
        </StackPanel>
    </Grid>
</Window>
