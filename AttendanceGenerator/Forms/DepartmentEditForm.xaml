<Window x:Class="AttendanceGenerator.Forms.DepartmentEditForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttendanceGenerator.Forms"
        mc:Ignorable="d"
        Title="Department Editor" Height="auto" Width="694" SizeToContent="Height">
    <Grid
        Style="{StaticResource WndBorderedGridStyle}">
        <Border Style="{StaticResource WndBorderStyle}">
            <StackPanel
                Style="{StaticResource StackPanelStyle}">
                <TextBlock 
                    Style="{StaticResource FormsHeaderStyle}"
                    Text="Редактирование подразделения"/>
                <TextBlock
                    Style="{StaticResource TextBlock_1}"
                    Text="Название"/>
                <TextBox
                    Style="{StaticResource TextBoxDefaultStyle}"
                    Margin="{StaticResource TextBoxMargins}"/>
                <Button Content="Подтвердить" IsDefault="True" Style="{StaticResource RoundedBigButton}"/>
                <Button Content="Отмена" IsCancel="True" Style="{StaticResource RoundedBigButton}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
