@model RemoveTimesheetVM
@{
    ViewData["Title"] = "Удаление табеля";
}

<h3>Метаданные табеля для подразделения</h3>
<h1>@Model.DepartmentName</h1>
<p>Подтвердите удаление следующих данных табеля</p>
<div class="col-6">
    <div class="form-floating mb-3">
        @Html.DropDownListFor(x => x.Month, Model.AvaialbleMonths, new {@class = "form-select", disabled = "disabled"})
        <label>Месяц</label>
    </div>
    
    <div class="form-floating mb-3">
        @Html.TextBoxFor(x => x.BeginDate, new {@class = "form-control", disabled = "disabled"})
        <label>Начало отчетного периода</label>
    </div>
    
     <div class="form-floating mb-3">
        @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", disabled = "disabled"})
        <label>Окончание отчетного периода (включительно)</label>
     </div>

    <div class="form-floating mb-3">
        @Html.DropDownListFor(x => x.Kind, Model.AvaialbleKinds, new { @class = "form-select", disabled = "disabled" })
        <label>Вид табеля</label>
    </div>

    <div class="form-floating mb-3">
        @Html.DropDownListFor(x => x.FormType, Model.AvaialbleForms, new { @class = "form-select", disabled = "disabled" })
        <label>Форма</label>
    </div>

    <div class="row mb-3">
        <div class="col">
            <div class="form-floating">
                @Html.TextBoxFor(x => x.ResponsibleExecutorName, new { @class = "form-control", disabled = "disabled" })
                <label>Ответственный исполнитель</label>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-floating">
                @Html.TextBoxFor(x => x.ResponsibleExecutorFunction, new { @class = "form-control", disabled = "disabled" })
                <label>Должность</label>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <div class="form-floating">
                @Html.TextBoxFor(x => x.ExecutorName, new { @class = "form-control", disabled = "disabled" })
                <label>Исполнитель</label>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-floating">
                @Html.TextBoxFor(x => x.ExecutorFunction, new { @class = "form-control", disabled = "disabled" })
                <label>Должность</label>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <div class="form-floating">
                @Html.TextBoxFor(x => x.AccountingExecutorName, new { @class = "form-control", disabled = "disabled" })
                <label>Проверяющий</label>
            </div>
        </div>
        <div class="col-auto">
            <div class="form-floating">
                @Html.TextBoxFor(x => x.AccountingExecutorFunction, new { @class = "form-control", disabled = "disabled" })
                <label>Должность</label>
            </div>
        </div>
    </div>

    <div class="form-floating mb-3">
        @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", disabled = "disabled" })
        <label>Примечание</label>
    </div>


</div>
<form method="post" asp-action="Remove">
    @Html.HiddenFor(x => x.Id)

    <button class="btn btn-outline-danger" type="submit">Подтвердить</button>
    <a class="btn btn-light" asp-action="Index" asp-route-departmentId="@Model.DepartmentId">Отмена</a>
</form>
