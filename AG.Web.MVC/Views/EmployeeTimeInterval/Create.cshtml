@model AG.Web.MVC.Models.EmployeeTimeInterval.CreateEmployeeTimeIntervalVM
@{
    ViewData["Title"] = "Новая неявка";
}
<div class="d-flex justify-content-center">
    <div>
        <h3>@ViewData["Title"]</h3>
        <form method="post" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            @Html.HiddenFor(x => x.EmployeeId)

            <div class="form-floating mb-3">
                @Html.TextBoxFor(x => x.Begin, string.Format("{0:d}", Model.Begin.ToShortDateString()), new { @class = "form-control", type = "date" })
                <label>Начало</label>
            </div>
            <div class="form-floating mb-3">
                @Html.TextBoxFor(x => x.End, string.Format("{0:d}", Model.End.ToShortDateString()), new { @class = "form-control", type = "date" })
                <label>Окончание (включительно)</label>
            </div>
            <div class="form-floating mb-3">
                @Html.DropDownListFor(x => x.SelectedTimeIntervalType, Model.TimeIntervals, new { @class = "form-control" })
                <label>Тип неявки</label>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Создать</button>
                <a class="btn btn-light" asp-action="Index" asp-controller="EmployeeTimeInterval" asp-route-employeeId="@Model.EmployeeId">Отмена</a>
            </div>
        </form>
    </div>
</div>