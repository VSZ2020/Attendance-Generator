@model EditEmployeeViewModel
@{
    ViewData["Title"] = "Редактирование данных сотрудника";
}
<h3>@ViewData["Title"]</h3>
<h1>@Model.LastName @Model.FirstName @Model.MiddleName</h1>
<div class="col-md-4">
    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.DepartmentId)

        <div class="form-floating mb-3">
            @Html.TextBoxFor(x => x.LastName, new {@class = "form-control"})
            <label>Фамилия</label>
        </div>

        <div class="form-floating mb-3">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
            <label>Имя</label>
        </div>

        <div class="form-floating mb-3">
            @Html.TextBoxFor(x => x.MiddleName, new { @class = "form-control" })
            <label>Отчество (при наличии)</label>
        </div>

        <div class="form-floating mb-3">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            <label>Адрес электронной почты</label>
        </div>

        <div class="form-floating mb-3">
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            <label>Телефон</label>
        </div>

        <button class="btn btn-primary" type="submit">Сохранить изменения</button>
        <a class="btn btn-light" asp-action="Index" asp-asp-controller="Employee">Отмена</a>
    </form>
</div>
